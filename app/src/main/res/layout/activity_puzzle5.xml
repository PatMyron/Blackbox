<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="com.patmyron.blackbox.Puzzle5Activity">

    <ImageView
        style="@style/centerBoxInChallenge"
        android:backgroundTint="@color/puzzle5" />

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@id/imageView0"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/wifi"
        android:scaleType="fitXY"
        android:tint="@color/puzzle5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/puzzle5translucent" />
</RelativeLayout>