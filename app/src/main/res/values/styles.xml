<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="mainScreenPuzzle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:onClick">puzzleLaunch</item>
        <item name="android:scaleType">fitXY</item>
        <item name="srcCompat">@drawable/dot</item>
    </style>

    <style name="sunRay">
        <item name="android:layout_width">9dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/puzzle2</item>
        <item name="android:tag">rays</item>
    </style>
</resources>
